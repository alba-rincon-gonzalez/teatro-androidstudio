<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acceso_cuenta">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="399dp"
        android:layout_height="201dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv1_acceso"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:fontFamily="monospace"
            android:text="Email:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/respuesta_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="#8F8D8D" />

        <TextView
            android:id="@+id/tv2_acceso"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="monospace"
            android:text="Contraseña:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/respuesta_contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="**********"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#8F8D8D" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <Button
            android:id="@+id/b1_acceso"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginStart="72dp"
            android:backgroundTint="#E8AF4C"
            android:fontFamily="monospace"
            android:onClick="atras"
            android:text="atras"
            android:textSize="16sp" />

        <Button
            android:id="@+id/b2_acceso"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginStart="56dp"
            android:backgroundTint="#E8AF4C"
            android:fontFamily="monospace"
            android:onClick="buscar_datos"
            android:text="Acceder"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>